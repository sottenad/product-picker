extends ../layout

block content
    h2 #{title}
    form(action="/remotes/edit/"+remote._id method="post")
        input(type="hidden" name="_csrf" value=csrf)
        input(type="hidden" name="_id" value=remote._id)
        table  
            tr
                td
                    label Name
                td
                    input#name(name="name" value=remote.name)
            tr
                td
                    label Key
                td
                    input#key(name="key" value=remote.key)
        br
        br
        input(type="submit" value="Save")